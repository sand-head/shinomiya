@page "/"
@using Shinomiya.Models
@inject FunimationService funimation

<h1>Funimation Shows</h1>

@if (shows == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var genre in facets.Genres)
    {
        <div>
            @genre.Name - @genre.Count
        </div>
    }
    <ShowGrid Shows=@shows />
}

@code {
    private ShowFacets facets;
    private List<Show> shows;

    protected override async Task OnInitializedAsync()
    {
        var result = await funimation.GetShowsAsync();
        facets = result.Facets;
        shows = result.Items;
    }

}
