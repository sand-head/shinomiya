<svg viewBox="0 0 10 1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <defs>
        <linearGradient id="@RatingId">
            <stop offset="0%" stop-color="#fff" />
            <stop offset="@(Rating / 5 * 100)%" stop-color="#fff" />
            <stop offset="@(Rating / 5 * 100)%" stop-color="#000" />
            <stop offset="100%" stop-color="#000" />
        </linearGradient>
    </defs>

    <text x="0.1" y="0.9" class="star-rating" fill="url(#@RatingId)" stroke="#000" stroke-width="0.1">🟊🟊🟊🟊🟊</text>
</svg>

@code {
    [Parameter]
    public double Rating { get; set; }

    public string RatingId => Rating.ToString().Replace(".", string.Empty);
}
